<h1>会員一覧</h1>

<div class="container px-5 px-sm-0">
  <div class="row">
  <table class="table table-hover table-inverse">
    
    <thead>
      <tr>
        <th>会員ID</th>
        <th>イメージ画像</th>
        <th>氏名</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%=customer.id %></td>
        <td><%#= attachment_image_tag %></td>
        <td>
          <%#= link_to admin_customer_path(customer) do %>
            <%= customer.name %>
          <%# end %>
        </td>
        <td><%= customer.email %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>
  </div>
</div>